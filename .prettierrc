{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "endOfLine": "lf",
        "printWidth": 160,
        "tabWidth": 2,
        "useTabs": true,
        "singleQuote": false,
        "bracketSpacing": true
      }
    },
    {
  "files": "*.ts",
      "options": {
        "arrowParens": "always",
        "bracketSpacing": true,
        "endOfLine": "lf",
        "insertPragma": false,
        "printWidth": 160,
        "proseWrap": "always",
        "requirePragma": false,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "useTabs": true,
        "parser": "typescript"
      }
    }
  ]
}
